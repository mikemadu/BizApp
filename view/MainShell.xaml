<Window x:Class="BizApp.view.MainShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BizApp.view"
        mc:Ignorable="d"
       Title="BizApp" Height="400" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="344*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Settings" Width="75" Margin="10,0,5,0" Click="Button_Click" />
            <Button Content="New Applicant" Width="106" Margin="0,0,5,0" Click="Button_Click_3" />
            <Button Content="Worker Pool" Width="75" Margin="0,0,5,0" Click="Button_Click_2" />
            <Button Content="In-Progress" Width="75" Margin="0,0,5,0" />
            <Button Content="Dashboard" Width="75" Margin="40,0,5,0" Click="Button_Click_1" />

        </StackPanel>
        <Frame x:Name="_mainFrame"  Margin="0,10,0,0" Grid.Row="1"  />


    </Grid>
</Window>
